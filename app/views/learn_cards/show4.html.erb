<h1> Level 4 </h1>

<h2 class="card learn-card-text"><%= @blanks %></h2>

<%= form_with model: @card, url: learn_card_path(@card), method: :put do |form| %>

  <div>
    <%= form.label :copied, "The final challenge! Copy the text from memory while making sure to use accurate punctuation:", class: "form-label" %>
    <%= form.text_area :copied, value: @copied, class: "form-control" %>
  </div>

  <br>

  <div>
    <%= form.hidden_field :level, value: 4 %>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>

<% end %>